\ProvidesPackage{commons/packages/otsikkotyylit}

\usepackage{fontspec}

\newfontface\chapterfont[Scale=2.3]{Raleway-ExtraLight.otf}
\newfontface\sectionfont[Scale=1.6]{Raleway-Light.otf}
\newfontface\subsectionfont[Scale=1.4]{Raleway-Regular.otf}

\titlespacing*{\chapter}{0pt}{0pt}{*18}
\titlespacing*{\section}{0pt}{8ex}{*4}
\titlespacing*{\paragraph}{0pt}{0pt}{0.5em}

% estää otsikkoa edeltävän välin konsumoinnin sivun alussa
\newcommand{\sectionbreak}{%
 \addpenalty{-300}%
 \vspace*{0pt}}
\newcommand{\subsectionbreak}{%
 \addpenalty{-300}%
 \vspace*{0pt}}

\renewcommand{\chaptertitlename}{Luku}

\titleformat{\chapter}[display]
{\chapterfont}
{\subsectionfont\MakeUppercase{\chaptertitlename}\ \thechapter}
{2pt}
{}

\titleformat{\section}[hang]
{\sectionfont\filleft}
{\thesection}
{0.5em}
{\MakeUppercase}
[\vspace{0.5ex}{\titlerule[1pt]}]

\titleformat{\subsection}
{\subsectionfont}
{\thesubsection}
{1em}
{}

\titleformat{\subsubsection}
{\bfseries}
{\thesubsubsection}
{1em}
{}

\titleformat{\paragraph}[runin]
{\bfseries}
{\theparagraph}
{0.2em}
{}
